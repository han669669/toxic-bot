{
  "version": 2,
  "builds": [
    {
      "src": "backend-proxy.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.{js,html}",
      "use": "@vercel/static",
      "config": {
        "headers": {
          "*.js": {"Content-Type": "text/javascript"}
        }
      }
    }
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "backend-proxy.js"},
    {"src": "/(.*)", "dest": "index.html"}
  ]
}
