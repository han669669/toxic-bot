{
  "version": 2,
  "builds": [
    {
      "src": "backend-proxy.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static",
      "config": {
        "headers": {
          "Content-Type": "text/javascript"
        }
      }
    }
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "backend-proxy.js"},
    {"src": "/(.*)", "dest": "index.html"},
    {"src": "/(.*.js)", "headers": {"Content-Type": "text/javascript"}, "continue": true}
  ]
}
